<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_ListView">

    <TextView
        android:id="@+id/tv_Opcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="Seleciona una opción"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/tv_Seleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:text="Muestra seleción"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="660dp" />

    <ListView
        android:id="@+id/lv_Lenguajes"
        android:layout_width="349dp"
        android:layout_height="453dp"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_Seleccion"
        app:layout_constraintTop_toBottomOf="@+id/tv_Opcion"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="31dp" />
</androidx.constraintlayout.widget.ConstraintLayout>